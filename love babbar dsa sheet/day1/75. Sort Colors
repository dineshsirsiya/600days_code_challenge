class Solution {
    public void sortColors(int[] nums) {
        int na=0;
        int nb=0;
        for(int i=0;i<nums.length;i++){
            if(nums[i]==0){
                na++;
            }
            if(nums[i]==1){
                nb++;
            }

        }
        for(int i=0;i<nums.length;i++){
            if(i<na+nb){
                if(i<na){
                    nums[i]=0;
                }
                else{
                    nums[i]=1;
                }
            }
            else{
                nums[i]=2;
            }
        }
    }
}
